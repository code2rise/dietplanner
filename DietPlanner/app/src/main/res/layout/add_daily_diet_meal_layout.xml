<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_meal_cardview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="1dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.30">

            <ImageView
                android:id="@+id/img_vegetable_pic"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_veg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.70"
            android:orientation="vertical">

            <com.rise.mealplanner.customviews.CustomTextViewMontSerratLightFont
                android:id="@+id/tv_prepare_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:textStyle="normal"
                android:textSize="18sp"
                android:text="Let's Prepare Your Lunch!" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>