<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/week_list_spinner_item_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvWeekname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/weeks_chooser_margin"
        android:textSize="@dimen/week_chooser_spinner_item_textsize"/>

    <TextView
        android:id="@+id/tvWeekDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/weeks_chooser_margin"
        android:layout_marginRight="@dimen/weeks_chooser_margin"
        android:layout_marginTop="@dimen/weeks_chooser_margin"
        android:textSize="@dimen/week_chooser_spinner_item_textsize"/>
</LinearLayout>
