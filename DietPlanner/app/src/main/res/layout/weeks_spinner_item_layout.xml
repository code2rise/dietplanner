<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/week_list_spinner_item_padding"
    android:paddingRight="@dimen/week_list_spinner_item_padding"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <com.rise.mealplanner.customviews.CustomTextViewMontSerratRegularFont
        android:id="@+id/tvWeekname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/week_name_margin"
        android:textStyle="normal"
        android:textSize="@dimen/week_chooser_spinner_item_textsize"/>

    <com.rise.mealplanner.customviews.CustomTextViewMontSerratRegularFont
        android:id="@+id/tvWeekDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/week_name_margin"
        android:layout_marginRight="@dimen/week_name_margin"
        android:layout_marginTop="@dimen/week_name_margin"
        android:textStyle="normal"
        android:textSize="@dimen/week_chooser_spinner_item_textsize"/>
</LinearLayout>
