<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DietPlannerActivity">

    <Spinner
        android:id="@+id/spWeeks"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/weeks_chooser_margin"
        android:spinnerMode="dialog"
        android:background="@drawable/spinner_bg"/>

    <FrameLayout
        android:id="@+id/flFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/weeks_chooser_margin"
        android:layout_marginRight="@dimen/weeks_chooser_margin"/>

</LinearLayout>
